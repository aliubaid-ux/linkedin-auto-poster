rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Matches any document in the 'users' collection.
    match /users/{userId} {
      // Anyone can create their own user document
      allow create: if isSignedIn() && isOwner(userId);
      // Only the owner can read, update, or delete their own user document
      allow read, update, delete: if isSignedIn() && isOwner(userId);
    }
  }
}
